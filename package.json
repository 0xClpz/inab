{
  "name": "inab-shared",
  "version": "0.0.1",
  "description": "Shared code between web and native clients",
  "main": "lib/index.js",
  "scripts": {
    "flow": "flow check",
    "compile": "babel -d lib/ src/",
    "compile:flow": "flow-copy-source src lib",
    "format": "prettier --single-quote --bracket-spacing=false --print-width 100 --write 'src/**/*.js'",
    "precommit": "lint-staged",
    "test": "jest"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write --single-quote --bracket-spacing=false --print-width 100",
      "eslint",
      "git add"
    ]
  },
  "peerDependencies": {
    "react": "^15.0.0"
  },
  "dependencies": {
    "hw-react-shared": "hwaterke/react-shared#build",
    "moment": "^2.18.1",
    "ramda": "^0.24.1",
    "redux": "^3.6.0",
    "redux-crud": "^3.0.5",
    "reselect": "^3.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-preset-env": "^1.4.0",
    "babel-preset-flow": "^6.23.0",
    "eslint": "^3.19.0",
    "eslint-config-react-app": "^0.6.2",
    "eslint-plugin-flowtype": "^2.32.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^7.0.0",
    "flow-bin": "^0.49.1",
    "flow-copy-source": "^1.1.0",
    "husky": "^0.14.3",
    "jest": "^20.0.1",
    "lint-staged": "^4.0.1",
    "prettier": "^1.2.2",
    "react": "^15.5.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hwaterke/inab-shared.git"
  },
  "author": "Harold Waterkeyn",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hwaterke/inab-shared/issues"
  },
  "homepage": "https://github.com/hwaterke/inab-shared#readme"
}
