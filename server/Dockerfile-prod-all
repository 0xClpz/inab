FROM ruby:alpine
RUN apk add --update build-base sqlite-dev

RUN mkdir /db
WORKDIR /app/server

# Install Ruby dependencies
COPY Gemfile* ./
RUN bundle install

# Copy server files
COPY api api
COPY auth auth
COPY config config
COPY models models
COPY config.ru ./
COPY sinatra.rb ./

# Copy client files
COPY dist public

ENV RACK_ENV production
ENV APPSERVER thin
ENV INAB_STATIC public
EXPOSE 8080

CMD bundle exec rackup --host :: -p 8080 -s $APPSERVER
